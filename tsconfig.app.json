{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // A linha "tsx": "react" foi removida, pois "jsx" já é herdado do arquivo principal.
    "composite": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}